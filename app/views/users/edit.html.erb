<div class="container">
<div class="row justify-content-center">
<div class="col-lg-8">

<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<%= form_with model: @user do |f| %>
    <p>Name</p>
    <%= f.text_field :name %><br>
    <p>Image</p>
    <%= f.file_field :image, accept: "image/*" %><br>
    <p>Introduction</p>
    <%= f.text_area :introduction %><br>
    <%= f.submit 'Update User', class: "btn btn-secondary" %><br>
<% end %>

</div>
</div>
</div>