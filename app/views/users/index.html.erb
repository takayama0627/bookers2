<div class="container">
<div class="row">

<div class="col-lg-3">
<%= render 'user', users: @users %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <tbody>
    <tr>
      <td>image</td>
      <td>name</td>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.image.attached? %>
            <%= image_tag user.image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
        </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>