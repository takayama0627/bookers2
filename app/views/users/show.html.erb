<%= flash[:notice] %>

<div class="container">
<div class="row">

<div class="col-lg-3">
<%= render 'user', users: @users %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
  <tbody>
    <tr>
      <td>Title</td>
      <td>Opinion</td>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag 'no_image', size: "80x80" %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>